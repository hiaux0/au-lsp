{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"sourceMap": true,
		"noEmitOnError": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
	},
	"exclude": [
		"node_modules",
		"packages/*/node_modules",
		".vscode-test",
		"_code-dep",
		"out"
	],
}