{
	"compilerOptions": {
		"experimentalDecorators": true,
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"declaration": true,
		"resolveJsonModule": true,
	},
	"include": [
		"src",
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"_code-dep"
	],
	"references": [
		{ "path": "./packages/client" },
		{ "path": "./packages/server" }
	]
}